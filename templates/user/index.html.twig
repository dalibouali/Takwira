                            <i class="fas fa-envelope fa-fw"></i>


                            {% set convNoRead = 0 %}
                            {% for conversation in app.user.conversations %}
                                {% if (conversation.lastMessage.isRead == false)and (conversation.lastMessage.sender!=app.user) %}
                                    {%  set convNoRead = convNoRead + 1 %}
                                {% endif %}
                            {% endfor %}
