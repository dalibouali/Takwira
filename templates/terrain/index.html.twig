{% extends 'user/index.html.twig' %}

{% block title %}Terrain index{% endblock %}

{% block body %}





    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Tarif</th>
            <th>Unite</th>
            <th>Nom</th>
            <th>Jour_dispo</th>
            <th>Heure_deb</th>
            <th>Heure_fin</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.id }}</td>
                <td>{{ terrain.tarif }}</td>
                <td>{{ terrain.unite }}</td>
                <td>{{ terrain.nom }}</td>
                <td>{{ terrain.jourDispo ? terrain.jourDispo|join(', ') : '' }}</td>
                <td>{{ terrain.heureDeb ? terrain.heureDeb|date('H:i:s') : '' }}</td>
                <td>{{ terrain.heureFin ? terrain.heureFin|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('show_terrain', {'id': terrain.id}) }}">show</a>
                    <a href="{{ path('terrain_edit', {'id': terrain.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('terrain_new') }}">Create new</a>
{% endblock %}